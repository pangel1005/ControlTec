@{
    ViewData["Title"] = "Mis solicitudes";
}

<div class="d-flex justify-content-between align-items-center mb-4">
    <h2 class="mb-0">Mis solicitudes</h2>
    <a class="btn btn-primary" href="/Solicitudes/Nueva">
        Nueva solicitud
    </a>

</div>

<div id="alertaSolicitudes" class="alert alert-danger d-none"></div>

<div class="card shadow-sm">
    <div class="card-body">
        <div id="loadingSolicitudes" class="text-center my-4">
            <div class="spinner-border" role="status"></div>
            <p class="mt-2 mb-0">Cargando solicitudes...</p>
        </div>

        <div class="table-responsive d-none" id="tablaSolicitudesWrapper">
            <table class="table table-hover align-middle" id="tablaSolicitudes">
                <thead class="table-light">
                    <tr>
                        <th>#</th>
                        <th>Servicio</th>
                        <th>Estado</th>
                        <th>Fecha</th>
                        <th style="width: 120px;">Acciones</th>
                    </tr>
                </thead>
                <tbody>
                    <!-- Se llena por JavaScript -->
                </tbody>
            </table>
        </div>

        <div id="sinSolicitudes" class="text-center text-muted d-none">
            <p class="mb-0">No tienes solicitudes registradas.</p>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        document.addEventListener('DOMContentLoaded', () => {
            const token = localStorage.getItem('authToken');
            const usuarioId = localStorage.getItem('usuarioId');

            // Si no hay token o id, mandamos al login
            if (!token || !usuarioId) {
                window.location.href = '/Account/Login';
                return;
            }

            cargarSolicitudes(token, usuarioId);
        });

        async function cargarSolicitudes(token, usuarioId) {
            const alerta = document.getElementById('alertaSolicitudes');
            const loading = document.getElementById('loadingSolicitudes');
            const wrapperTabla = document.getElementById('tablaSolicitudesWrapper');
            const sinSolicitudes = document.getElementById('sinSolicitudes');
            const tbody = document.querySelector('#tablaSolicitudes tbody');

            alerta.classList.add('d-none');
            alerta.textContent = '';
            loading.classList.remove('d-none');
            wrapperTabla.classList.add('d-none');
            sinSolicitudes.classList.add('d-none');
            tbody.innerHTML = '';

            try {
                // 🔹 AQUÍ SE CAMBIA LA RUTA
                const resp = await fetch(`/api/Solicitudes/usuario/${usuarioId}`, {
                    headers: {
                        'Authorization': 'Bearer ' + token
                    }
                });

                loading.classList.add('d-none');

                if (!resp.ok) {
                    let msg = 'No se pudo cargar las solicitudes.';
                    try {
                        const err = await resp.json();
                        if (err && err.message) msg = err.message;
                    } catch { }

                    alerta.textContent = msg;
                    alerta.classList.remove('d-none');
                    return;
                }

                const data = await resp.json();

                if (!data || data.length === 0) {
                    sinSolicitudes.classList.remove('d-none');
                    return;
                }

                data.forEach(s => {
                    const id = s.id ?? s.Id;
                    const servicioNombre = s.servicio?.nombre ?? s.Servicio?.Nombre ?? '—';
                    const estado = s.estado ?? s.Estado ?? '—';
                    const fechaRaw = s.fechaCreacion ?? s.FechaCreacion ?? '';
                    const fecha = fechaRaw ? fechaRaw.toString().substring(0, 10) : '—';

                    const tr = document.createElement('tr');
                    tr.innerHTML = `
                        <td>${id}</td>
                        <td>${servicioNombre}</td>
                        <td>${estado}</td>
                        <td>${fecha}</td>
                        <td>
                            <a href="/Solicitudes/Detalle/${id}" class="btn btn-sm btn-outline-primary">
                                Ver
                            </a>
                        </td>
                    `;
                    tbody.appendChild(tr);
                });

                wrapperTabla.classList.remove('d-none');

            } catch (err) {
                console.error(err);
                loading.classList.add('d-none');
                alerta.textContent = 'Error de conexión con el servidor.';
                alerta.classList.remove('d-none');
            }
        }
    </script>
}
